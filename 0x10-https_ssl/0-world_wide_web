#!/usr/bin/env bash
# Display information about subdomains.

domain_information() {
    local result
    result=$(dig "$2"."$1" +short)

    local subdomain_type=$(dig "$2"."$1" | awk '/ANSWER SECTION/{getline; print $4}')
    echo "The subdomain $2 is a $subdomain_type record and points to $result"
}

if [ "$#" -eq 1 ]; then
    domain_information "$1" "www"
    domain_information "$1" "lb-01"
    domain_information "$1" "web-01"
    domain_information "$1" "web-02"
elif [ "$#" -eq 2 ]; then
    domain_information "$1" "$2"
