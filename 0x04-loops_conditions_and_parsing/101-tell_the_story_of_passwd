#!/usr/bin/env bash
# Path to the passwd file
passwd_file="/etc/passwd"

# Check if the passwd file exists
if [ ! -f "$passwd_file" ]; then
    echo "Error: $passwd_file does not exist."
    exit 1
fi

# Read and process the passwd file line by line
while IFS=: read -r username _ userid groupid _ home_directory shell; do
    # Generate a fictional story for each user
    echo "The user $username is part of the $groupid gang, lives in $home_directory, and rides $shell."
    echo -n "USER ID's place is protected by the passcode "
    # Generate a fictional password (you can replace this with a real password if needed)
    password="SuperSecretPassword123"
    echo -n "$password, more info about the user here: "
    # Generate fictional user info (you can replace this with actual user information)
    user_info="A dedicated computer enthusiast and an expert in cybersecurity."
    echo "$user_info"
    echo
done < "$passwd_file"
